<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="20dp"
                android:text="@string/tv_title1"
                android:textColor="#CA1F7B"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:text="@string/tv_title2"
                android:textColor="#CA1F7B"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    <ImageView
        android:id="@+id/imvCurrency1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:src="@drawable/turkey" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/currency1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/tv_currency1"
                android:textColor="#00F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/currency1EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tv_hint"
                android:inputType="number|numberDecimal"
                android:minHeight="48dp"
                android:paddingBottom="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/tv_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/tv_choice_txt"
                android:textColor="#00F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/currency2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/tv_currency2"
                android:textColor="#00F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/currency2EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tv_hint"
                android:inputType="number|numberDecimal" />
        </TableRow>
    </TableLayout>

</LinearLayout>